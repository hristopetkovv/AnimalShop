@model AnimalShop.Web.ViewModels.Administration.Administration.ProductInputViewModel;

@{
    this.ViewData["Title"] = "Create Product";
}

<h3 class="font-weight-bold">Create Product</h3>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BrandId"></label>
        <input asp-for="BrandId" class="form-control" />
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnimalType"></label>
        <div class="col-md-10">
            <select asp-for="AnimalType" asp-items="Html.GetEnumSelectList<AnimalShop.Data.Models.Enums.AnimalType>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="AnimalType" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <div class="col-md-10">
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<AnimalShop.Data.Models.Enums.ProductCategory>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span asp-validation-for="Category" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>