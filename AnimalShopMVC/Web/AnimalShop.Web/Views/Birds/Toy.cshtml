@model AnimalShop.Web.ViewModels.Products.ProductListingViewModel

@{
    this.ViewData["Title"] = "Birds Toys";
}

<div>
    <p>
        <strong>@Model.Count product(s) found</strong>
    </p>
</div>

<div class="row">
    @foreach (var toy in Model.Products)
    {
        <partial name="../Shared/_ProductPartialView.cshtml" model="toy" />
    }
</div>

<hr />

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Birds"
                   asp-action="Toy"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-controller="Birds"
                   asp-action="Toy"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Birds"
                   asp-action="Toy"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
